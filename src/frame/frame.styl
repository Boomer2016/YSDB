
#root
  width 100%
  height 100vh
  overflow hidden
  font-family 'Microsoft YaHei'
.frame
  height 100%
.frame-main
  overflow auto
.header-dark
  background #001322
  font-weight 300
  height 3rem
  width 100%
  .nav-logo
    width 20vw
    @media only screen and (max-width: 768px)
      width 50vw
  .nav-menu
    width 60vw
    @media only screen and (max-width: 768px)
      display none
    .ant-menu-item-selected, .ant-menu-item-active
      background none !important
      .menu-item-name
        padding-bottom 0.2rem
        border-bottom 0.1rem solid #fff
.common-logo
  height 3rem
  padding-left 2rem
.header-action
  width 20vw
  padding-right 1rem
  @media only screen and (max-width: 768px)
    width 50vw
  .action-icon
    cursor pointer
    color #fff
    display none
    @media only screen and (max-width: 768px)
      display block
.cellphone-nav-menu
  width 100vw
  height calc(100vh - 4rem)
  overflow auto
  .ant-dropdown-menu-item
    padding 1rem
    border-bottom 0.1rem solid #e0e0e0
  .ant-dropdown-menu-submenu
    padding 1rem
    border-bottom 0.1rem solid #e0e0e0
  .ant-dropdown-menu-item-group-title
    padding 1rem
    border-bottom 0.1rem solid #e0e0e0
.frame-footer
  background #001322
  width 100%
  color #ffffff
  font-weight 300
  .footer-main
    width 100%
    .footer-logo
      padding-left 10vw
      font-weight 500
      font-size 1.4rem
      padding-top 4rem
      @media only screen and (max-width: 768px)
        text-align center
        padding 1rem
    .footer-link
      padding 4rem 2rem
      @media only screen and (max-width: 768px)
        padding 1rem
      .link-item
        font-size 1.2rem
        font-weight 800
      .link-name
        font-size 0.9rem
        color rgba(255, 255, 255, 0.65)
  .footer-address
    width 100%
    border-top 0.1rem solid rgba(255, 255, 255, 0.4)
    padding 1.6rem 0rem 1.6rem 10vw
    font-size 0.9rem
    color rgba(255, 255, 255, 0.65)
    @media only screen and (max-width: 768px)
      padding 1rem
      text-align center
