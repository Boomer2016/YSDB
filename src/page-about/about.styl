.page-about
  overflow auto
  .about-header
    width 100%
    height 30rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/cooperationBg.png')
    color #ffffff
    .about-header-title
      margin-top 5rem
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .about-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .about-content
    background-image url('../image/waveDot.png')
    background-repeat no-repeat
    background-size 12rem
    background-position bottom right
    padding-bottom 6rem
    .comp-src
      height 20rem
    .leftBg
      background-image url('../image/topBird.png')
      background-repeat no-repeat
      background-size 6rem
      background-position bottom left
      padding-bottom 6rem
    .news-item
      background #ebebeb
      margin 1rem
      padding 1rem
    .news-content
      margin 0.8rem 0rem
      font-size 0.8rem
    .news-bottom
      font-size 0.8rem
      color rgba(0, 0, 0, 0.65)
