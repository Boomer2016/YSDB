.page-cooperation
  overflow-y auto
  overflow-x hidden
  .cooperation-header
    width 100%
    height 30rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/cooperationBg.png')
    color #ffffff
    .cooperation-header-title
      margin-top 5rem
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .cooperation-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .contact-area
    background-image url('../image/waveRight.png')
    background-repeat no-repeat
    background-size 12rem
    background-position bottom right
    .leftBg
      background-image url('../image/usLine.png')
      background-repeat no-repeat
      background-size 8rem
      background-position bottom left
      padding-bottom 2rem
    .qr-cord
      height 12rem
      width 12rem
    .contact-name
      margin 10px
    .contact-value
      margin 2px 10px
      color rgba(0, 0, 0, 0.55)
      font-size 0.9rem
    .contact-mobile
      @media only screen and (max-width: 768px)
        align-items center
  .location-bg
    background-color #e0e0e0
    padding 2rem 0rem 5rem 0rem
    background-image url('../image/bottomCloud.png')
    background-repeat no-repeat
    background-size 7rem
    background-position bottom right
  .location-content
    padding 1rem 5%
    color #2e5890
