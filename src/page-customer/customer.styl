.page-customer
  overflow-y auto
  overflow-x hidden
  .customer-header
    width 100%
    height 30rem
    background-size 100% 100%
    background-repeat no-repeat
    background-image url('../image/customerBg.png')
    color #ffffff
    @media only screen and (max-width 768px)
      background-size cover
    .customer-header-title
      margin-top 5rem
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width 768px)
        width 100%
        font-size 1.4rem
    .customer-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width 768px)
        width 98%
  .case-desc
    background-image url('../image/caseCloud.png')
    background-repeat no-repeat
    background-size 8rem
    background-position 98% 5%
    @media only screen and (max-width 768px)
      background-size 3rem
    .subBg
      background-image url('../image/caseLine.png')
      background-repeat no-repeat
      background-size 12rem
      background-position top left
      width 100%
      @media only screen and (max-width 768px)
        background-size 4rem
    .case-item
      padding 0.5rem
      display flex !important
      width 98%
      height 6rem
    .case-item-title
      background #e0e0e0
      padding 1rem
    .case-content
      flex 1
      background #e0e0e0
      padding 1rem
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 3
      -webkit-box-orient vertical
  .case-item-title
    padding-right 1rem
.customer-earns
  background-image url('../image/waveDot.png')
  background-repeat no-repeat
  background-size 14rem
  background-position bottom right
  @media only screen and (max-width 768px)
    background-size 4rem
  .subBg
    background-image url('../image/montain.png')
    background-repeat no-repeat
    background-size 12rem
    background-position top left
    width 100%
    padding-bottom 2rem
    @media only screen and (max-width 768px)
      background-size 4rem
      padding-bottom 0.5rem
  .earn-row
    width 80vw
    margin-bottom 2rem
  .earn-item
    @media only screen and (max-width 768px)
      text-align center
  .right-border
    border-right 0.15rem solid #1D5894
    @media only screen and (max-width 768px)
      border none
.solution-area
  background-image url('../image/montainSea.png')
  background-repeat no-repeat
  background-size 7rem
  background-position top right
  @media only screen and (max-width 768px)
    background-size 3rem
  .solution-src
    height 100%
    width 100%
    margin-top 1rem
    padding 0 2rem
.case-slider
  width 90vw
  @media only screen and (max-width 768px)
    width 80vw
