.page-home
  padding-top 3rem
  .home-header
    width 100%
    height 35rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/homeBg.png')
    color #ffffff
    .home-header-title
      margin-top 5rem
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .home-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .home-highlight
    width 100%
    height auto
    padding 1rem 0rem
    .top-line
      background-image url('../image/left-top-line.svg')
      background-repeat no-repeat
      background-size contain
      height 2rem
      width 16%
    .bottom-line
      background-image url('../image/right-bottom-line.svg')
      background-repeat no-repeat
      background-size contain
      height 2rem
      width 16%
    .highlight-title
      color #2E5890
      font-size 1.6rem
      font-weight 800
    .highlight-detail
      padding 1rem 0rem
      width 100%
      .detail-item
        border-left 0.14rem solid #EBEBEB
        margin 0.2rem 0
    .highlight-border
      width 2rem
      height 0.1rem
      background #FF6D19
      overflow hidden
.highlight-content
  width 60%
  text-align center
  font-size 0.8rem
  padding 0.4rem 0
.home-advance
  width 100%
  background #3978c2
  color #ffffff
  padding 1rem
  .advance-icon
    height 3rem
    width 3rem
    border 1px solid #ffffff
    border-radius 50%
  .advance-item
    padding 1.2rem 0
  .advance-name
    margin 0.4rem 0
.home-experience
  background linear-gradient(to right, #55BDFA, #0059B3)
  padding 3.5rem 0.12rem 8rem
  color #ffffff
