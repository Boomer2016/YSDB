.page-product
  padding-top 3rem
  .product-header
    width 100%
    height 28rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/homeBg.png')
    color #ffffff
    .product-header-title
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .product-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .product-arch
    background #ffffff
    padding 1rem
    .arch-pic
      img
        width 100%
        height auto
    .arch-content
      padding 2rem
      font-size 0.9rem
  .service-power
    background linear-gradient(to right, #55BDFA, #0059B3)
    color #ffffff
    padding 2rem
    @media only screen and (max-width: 768px)
      padding 2rem 0
    .service-title
      width 50%
      @media only screen and (max-width: 768px)
        width 100%
    .service-padding
      padding 1rem 10vw
    .service-content
      .power-item
        border-right 0.1rem solid #e0e0e0
        margin 1rem 0rem
        padding-left 1rem
        @media only screen and (max-width: 768px)
          border none
  .product-scene
    padding-top 2rem
    .scene-item
      height 23rem
      padding 3rem
      color #ffffff
      background-size cover
      background-color #6B92C2
      background-repeat no-repeat
      border 4px solid #fff
  .core-value
    padding-top 2rem
    .value-item
      height 17rem
      padding 1rem
      color #ffffff
      background-color #24A0E4
      &:nth-of-type(odd)
        background #1E67AD
    .scene-row
      margin: 1rem 8vw
    .value-icon
      height 3rem
      width 3rem
      background #ffffff
      border-radius 50%
.highlight-content
  width 60%
  text-align center
  font-size 0.8rem
  padding 0.4rem 0
.product-advance
  width 100%
  background #3978c2
  color #ffffff
  padding 1rem
  .advance-icon
    height 3rem
    width 3rem
    border 1px solid #ffffff
    border-radius 50%
  .advance-item
    padding 1.2rem 0
  .advance-name
    margin 0.4rem 0
.product-experience
  background linear-gradient(to right, #55BDFA, #0059B3)
  padding 3.5rem 0.12rem 8rem
  color #ffffff
