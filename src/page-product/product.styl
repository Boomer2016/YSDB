.page-product
  overflow auto
  .product-header
    width 100vw
    // height 42.3vw
    height 23rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/prodBg.png')
    background-position center
    color #ffffff
    .product-header-title
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .product-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .product-intro
    .intro-item
      display flex !important
      width 100%
      flex-direction row !important
      justify-content space-between
      @media only screen and (max-width: 768px)
        flex-direction column !important
    .intro-item-src
      width 40%
      height auto
      margin-right 8%
      @media only screen and (max-width: 768px)
        width 100%
    .intro-item-content
      padding-top 2rem
      width 50%
      background-size 8rem
      background-repeat no-repeat
      background-image url('../image/prodIntro.png')
      background-position bottom left
      @media only screen and (max-width: 768px)
        width 100%
  .product-area
    background rgb(247, 248, 249)
    .intro-detail
      padding 1rem 10%
      @media only screen and (max-width: 768px)
        padding 1rem 0.1rem
    .arch-pic
      img
        width 80%
        height auto
        margin 0 auto
    .arch-content
      font-size 0.9rem
  .service-power
    background-size 10rem
    background-repeat no-repeat
    background-image url('../image/prodPower.png')
    background-position top right
    @media only screen and (max-width: 768px)
      background-size 2rem
    .service-title
      padding-left 10vw
      padding-bottom 2rem
      @media only screen and (max-width: 768px)
        padding 0.2rem
    .service-padding
      padding 1rem 10vw
      background rgb(247, 248, 249)
    .service-content
      .power-item
        margin 1rem 0rem
        padding-left 1rem
        @media only screen and (max-width: 768px)
          text-align center
      .item-title
        color #2e5890
  .product-scene
    background-size 20rem
    background-repeat no-repeat
    background-image url('../image/waveLine.png')
    background-position top right
    @media only screen and (max-width: 768px)
      background-size 6rem
    .subBg
      background-size 4rem
      background-repeat no-repeat
      background-image url('../image/topBird.png')
      background-position 20%
      @media only screen and (max-width: 768px)
        background-size 2rem
        background-position top left
    .scene-item
      width 22vw
      height 26.54vw
      padding 3rem
      color #ffffff
      background-size cover
      background-color #E4EBF3
      background-repeat no-repeat
      border 4px solid #fff
      display flex !important
      flex-direction column
      @media only screen and (max-width: 768px)
        width 90vw
        height 106vw
  .core-value
    background-size 10rem
    background-repeat no-repeat
    background-image url('../image/montainSea.png')
    background-position top right
    position relative
    @media only screen and (max-width: 768px)
      background-size 4rem
    .subBg
      background-size 10rem
      background-repeat no-repeat
      background-image url('../image/left-top-line.svg')
      background-position top left
      @media only screen and (max-width: 768px)
        background-size 4rem
    .value-item
      height 17rem
      padding 1rem
      color #ffffff
      margin 1rem 0rem
      background-color #24A0E4
      &:nth-of-type(odd)
        background #1E67AD
    .scene-row
      margin 1rem 8vw
    .value-icon
      height 3rem
      width 3rem
      background #ffffff
      border-radius 50%
    .core-bottom
      background-size 20rem
      background-repeat no-repeat
      background-image url('../image/waveLine.png')
      background-position bottom left
      background-color #EBEBEB
      position absolute
      width 100%
      height 45%
      top 55%
      left 0
      z-index -1
      @media only screen and (max-width: 768px)
        background-size 10rem
.product-advance
  width 100%
  background #3978c2
  color #ffffff
  padding 1rem
  .advance-icon
    height 3rem
    width 3rem
    border 1px solid #ffffff
    border-radius 50%
  .advance-item
    padding 1.2rem 0
  .advance-name
    margin 0.4rem 0
.intro-slider
  width 90vw
  @media only screen and (max-width: 768px)
    width 80vw
