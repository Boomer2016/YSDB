.page-product
  padding-top 3rem
  .product-header
    width 100%
    height 28rem
    background-size cover
    background-repeat no-repeat
    background-image url('../image/homeBg.png')
    color #ffffff
    .product-header-title
      width 65%
      text-align center
      color #ffffff
      @media only screen and (max-width: 768px)
        width 100%
        font-size 1.4rem
    .product-header-content
      width 60%
      margin 1.2rem 0rem
      text-align center
      font-size 1rem
      font-weight 300
      @media only screen and (max-width: 768px)
        width 98%
  .product-arch
    background #ffffff
    padding 0 2rem
    .arch-pic
      width 50%
      padding 2rem
      img
        width 100%
        height auto
    .arch-content
      width 50%
      padding 2rem
      font-size 0.9rem
  .service-power
    background linear-gradient(to right, #55BDFA, #0059B3)
    color #ffffff
    padding 2rem
    .service-title
      width 50%
    .service-content
      .power-item
        border-right 0.1rem solid #ebebeb
        margin 1rem 0rem
.highlight-content
  width 60%
  text-align center
  font-size 0.8rem
  padding 0.4rem 0
.product-advance
  width 100%
  background #3978c2
  color #ffffff
  padding 1rem
  .advance-icon
    height 3rem
    width 3rem
    border 1px solid #ffffff
    border-radius 50%
  .advance-item
    padding 1.2rem 0
  .advance-name
    margin 0.4rem 0
.product-experience
  background linear-gradient(to right, #55BDFA, #0059B3)
  padding 3.5rem 0.12rem 8rem
  color #ffffff
